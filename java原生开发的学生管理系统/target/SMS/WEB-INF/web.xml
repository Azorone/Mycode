<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
     http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
  <display-name>Archetype Created Web Application</display-name>
  <welcome-file-list>
    <welcome-file>Page/main.html</welcome-file>
  </welcome-file-list>

  <filter>
    <filter-name>Filtercache</filter-name>
    <filter-class>sms.filter.Filtercache</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>Filtercache</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

<!--登录过滤器-->
  <filter>
    <filter-name>FilterGlobal</filter-name>
    <filter-class>sms.filter.FilterGlobal</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>FilterGlobal</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

<!--权限过滤器-->
  <filter>
    <filter-name>FilterPermission</filter-name>
    <filter-class>sms.filter.FilterPermission</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>FilterPermission</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>



<!-- 登录-->
  <servlet>
    <servlet-name>ServletLogin</servlet-name>
    <servlet-class>sms.servlet.ServletLogin</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ServletLogin</servlet-name>
    <url-pattern>/sms-login</url-pattern>
  </servlet-mapping>

<!--注册-->
  <servlet>
    <servlet-name>ServletRegister</servlet-name>
    <servlet-class>sms.servlet.ServletRegister</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ServletRegister</servlet-name>
    <url-pattern>/sms-register</url-pattern>
  </servlet-mapping>
<!--获取教室-->
<servlet>
  <servlet-name>ServletgetClass</servlet-name>
  <servlet-class>sms.servlet.ServletgetClass</servlet-class>
</servlet>
  <servlet-mapping>
    <servlet-name>ServletgetClass</servlet-name>
    <url-pattern>/sms-getClass</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>ServletDoExam</servlet-name>
    <servlet-class>sms.servlet.Question.ServletDoExam</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ServletDoExam</servlet-name>
    <url-pattern>/doExam</url-pattern>
  </servlet-mapping>
<!--控制转发-->
  <servlet>
    <servlet-name>ServletControl</servlet-name>
    <servlet-class>sms.servlet.Tool.ServletControl</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ServletControl</servlet-name>
    <url-pattern>/Control</url-pattern>
  </servlet-mapping>
  
  <!--学生获取当前教室的作业-->
  <servlet>
    <servlet-name>ServletgetQuestion</servlet-name>
    <servlet-class>sms.servlet.Question.ServletgetQuestion</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ServletgetQuestion</servlet-name>
    <url-pattern>/getStudentExam</url-pattern>
  </servlet-mapping>

  <!--老师创建教室-->
  <servlet>
    <servlet-name>ServletCreatClass</servlet-name>
    <servlet-class>sms.servlet.ClassServlet.ServletCreatClass</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ServletCreatClass</servlet-name>
    <url-pattern>/CreatClass</url-pattern>
  </servlet-mapping>
  
  <!--学生申请加入教室-->
  <servlet>
    <servlet-name>ServletJoinClass</servlet-name>
    <servlet-class>sms.servlet.StudentServlet.ServletJoinClass</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ServletJoinClass</servlet-name>
    <url-pattern>/JoinClass</url-pattern>
  </servlet-mapping>
  
  <!--老师获得申请-->
  <servlet>
    <servlet-name>ServletGetNews</servlet-name>
    <servlet-class>sms.servlet.teacherServlet.News.ServletGetNews</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ServletGetNews</servlet-name>
    <url-pattern>/getJoinNews</url-pattern>
  </servlet-mapping>
  <!--老师处理申请-->
  <servlet>
    <servlet-name>ServletDealNews</servlet-name>
    <servlet-class>sms.servlet.teacherServlet.ServletDealNews</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ServletDealNews</servlet-name>
    <url-pattern>/DealNews</url-pattern>
  </servlet-mapping>
  
  <!--获取老师创建的教室-->
  <servlet>
    <servlet-name>ServletgetClassTechaer</servlet-name>
    <servlet-class>sms.servlet.teacherServlet.News.ServletgetClassTechaer</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ServletgetClassTechaer</servlet-name>
    <url-pattern>/getTclss</url-pattern>
  </servlet-mapping>
  
  <!--获取老师的作业-->
  <servlet>
    <servlet-name>ServletgetMyExam</servlet-name>
    <servlet-class>sms.servlet.teacherServlet.News.ServletgetMyExam</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ServletgetMyExam</servlet-name>
    <url-pattern>/MyExam</url-pattern>
  </servlet-mapping>
  <!--获取教室学生-->
  <servlet>
    <servlet-name>ServletgetStudentC</servlet-name>
    <servlet-class>sms.servlet.teacherServlet.News.ServletgetStudentC</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ServletgetStudentC</servlet-name>
    <url-pattern>/getStudents</url-pattern>
  </servlet-mapping>

  <!--删除教室-->
  <servlet>
    <servlet-name>ServletDelClass</servlet-name>
    <servlet-class>sms.servlet.teacherServlet.ClassManger.ServletDelClass</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ServletDelClass</servlet-name>
    <url-pattern>/DelClass</url-pattern>
  </servlet-mapping>
  
  <!---创建作业-->
  <servlet>
    <servlet-name>ServletCreatExam</servlet-name>
    <servlet-class>sms.servlet.teacherServlet.ExamManger.ServletCreatExam</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ServletCreatExam</servlet-name>
    <url-pattern>/creatExam</url-pattern>
  </servlet-mapping>
  <!--删除作业-->
  <servlet>
    <servlet-name>ServletDelExam</servlet-name>
    <servlet-class>sms.servlet.teacherServlet.ExamManger.ServletDelExam</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ServletDelExam</servlet-name>
    <url-pattern>/DelExam</url-pattern>
  </servlet-mapping>
  <!--获取自己创建的选择题-->
  <servlet>
    <servlet-name>ServletGetQuestionX</servlet-name>
    <servlet-class>sms.servlet.teacherServlet.ExamManger.ServletGetQuestionX</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ServletGetQuestionX</servlet-name>
    <url-pattern>/getQX</url-pattern>
  </servlet-mapping>
<!---获取自己创建的论述题-->
  <servlet>
    <servlet-name>ServletGetQuestionL</servlet-name>
    <servlet-class>sms.servlet.teacherServlet.ExamManger.ServletGetQuestionL</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ServletGetQuestionL</servlet-name>
    <url-pattern>/getQL</url-pattern>
  </servlet-mapping>
  <!--删除选择题-->
  <servlet>
    <servlet-name>ServletDelQL</servlet-name>
    <servlet-class>sms.servlet.teacherServlet.ExamManger.ServletDelQL</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ServletDelQL</servlet-name>
    <url-pattern>/delql</url-pattern>
  </servlet-mapping>
  <!--删除论述题-->
<servlet>
  <servlet-name>ServletDelQw</servlet-name>
  <servlet-class>sms.servlet.teacherServlet.ExamManger.ServletDelQw</servlet-class>
</servlet>
<servlet-mapping>
  <servlet-name>ServletDelQw</servlet-name>
  <url-pattern>/delqw</url-pattern>
</servlet-mapping>

  <!---DOexam获取数据-->
  <servlet>
    <servlet-name>ServletOKClass</servlet-name>
    <servlet-class>sms.servlet.teacherServlet.ExamManger.ServletOKClass</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ServletOKClass</servlet-name>
    <url-pattern>/OKClass</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>ServletNoQuestion</servlet-name>
    <servlet-class>sms.servlet.teacherServlet.ExamManger.ServletNoQuestion</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ServletNoQuestion</servlet-name>
    <url-pattern>/NoQuestion</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>ServletNoClass</servlet-name>
    <servlet-class>sms.servlet.teacherServlet.ExamManger.ServletNoClass</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ServletNoClass</servlet-name>
    <url-pattern>/NoClass</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>ServletOKQuestion</servlet-name>
    <servlet-class>sms.servlet.teacherServlet.ExamManger.ServletOKQuestion</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ServletOKQuestion</servlet-name>
    <url-pattern>/OKQuestion</url-pattern>
  </servlet-mapping>

  <!--编辑试题-->

  <!--取消发布-->
  <servlet>
    <servlet-name>ServletremoveClass</servlet-name>
    <servlet-class>sms.servlet.teacherServlet.ExamManger.ServletremoveClass</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ServletremoveClass</servlet-name>
    <url-pattern>/removeClass</url-pattern>
  </servlet-mapping>

  <!--发布试题-->
  <servlet>
    <servlet-name>ServletAddClass</servlet-name>
    <servlet-class>sms.servlet.teacherServlet.ExamManger.ServletAddClass</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ServletAddClass</servlet-name>
    <url-pattern>/AddClass</url-pattern>
  </servlet-mapping>

  <!--试题移除题-->
  <servlet>
    <servlet-name>ServletremoveQuestion</servlet-name>
    <servlet-class>sms.servlet.teacherServlet.ExamManger.ServletremoveQuestion</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ServletremoveQuestion</servlet-name>
    <url-pattern>/removeQuestion</url-pattern>
  </servlet-mapping>


  <!--试题添加题-->
  <servlet>
    <servlet-name>ServletAddQuestion</servlet-name>
    <servlet-class>sms.servlet.teacherServlet.ExamManger.ServletAddQuestion</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ServletAddQuestion</servlet-name>
    <url-pattern>/AddQuestion</url-pattern>
  </servlet-mapping>
  
  <!--判卷-->
  <servlet>
    <servlet-name>ServletTestScore</servlet-name>
    <servlet-class>sms.servlet.ServletTestScore</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ServletTestScore</servlet-name>
    <url-pattern>/Score</url-pattern>
  </servlet-mapping>
  
  <!--获得一张试卷-->
  <servlet>
    <servlet-name>ServletGetTest</servlet-name>
    <servlet-class>sms.servlet.StudentServlet.ServletGetTest</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ServletGetTest</servlet-name>
    <url-pattern>/getTest</url-pattern>
  </servlet-mapping>
  <!--上传一道选择题-->
  <servlet>
    <servlet-name>ServletmakeQuestion</servlet-name>
    <servlet-class>sms.servlet.teacherServlet.ExamManger.ServletmakeQuestion</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ServletmakeQuestion</servlet-name>
    <url-pattern>/makeQuestion</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>ServletUpfile</servlet-name>
    <servlet-class>sms.servlet.Tool.ServletUpfile</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ServletUpfile</servlet-name>
    <url-pattern>/Upfile</url-pattern>
  </servlet-mapping>
</web-app>