<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <welcome-file-list>
        <welcome-file>MainPage.html</welcome-file>

    </welcome-file-list>
    <error-page>
        <error-code>404</error-code>
        <location>/error.html</location>
    </error-page>
    <error-page>
        <location>/500.html</location>
    </error-page>
    <!---->
    <filter>
        <filter-name>FilterCode</filter-name>
        <filter-class>WebFilter.FilterCode</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>FilterCode</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>Filterlogin</filter-name>
        <filter-class>WebFilter.Filterlogin</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>Filterlogin</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>


    <!-- 用于登录的servlet-->
    <servlet>
        <servlet-name>ServletLoogin</servlet-name>
        <servlet-class>WebServlet.ServletLogin</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletLoogin</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <!--用于注册的servlet-->
    <servlet>
        <servlet-name>ServletRegister</servlet-name>
        <servlet-class>WebServlet.ServletRegister</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletRegister</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <!--用于控制转发的-->
    <servlet>
        <servlet-name>ServletControl</servlet-name>
        <servlet-class>WebServlet.ServletControl</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletControl</servlet-name>
        <url-pattern>/Control</url-pattern>
    </servlet-mapping>

    <!--用于获取所有商品的servlet-->
    <servlet>
        <servlet-name>ServletProduct</servlet-name>
        <servlet-class>WebServlet.ServletProduct</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletProduct</servlet-name>
        <url-pattern>/getProduct</url-pattern>
    </servlet-mapping>
    <!--用于后台商品页面进行转发的servlet-->
    <servlet>
        <servlet-name>ServletProctControl</servlet-name>
        <servlet-class>WebServlet.ServletProctControl</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletProctControl</servlet-name>
        <url-pattern>/ProductControl</url-pattern>
    </servlet-mapping>
    <!--用于获取出售列表的servlet-->
    <servlet>
        <servlet-name>ServletsellProduct</servlet-name>
        <servlet-class>WebServlet.ServletsellProduct</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletsellProduct</servlet-name>
        <url-pattern>/sellProduct</url-pattern>
    </servlet-mapping>

    <!--用于上传商品的servlet-->
    <servlet>
        <servlet-name>ServletAddProduct</servlet-name>
        <servlet-class>WebServlet.ServletAddProduct</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletAddProduct</servlet-name>
        <url-pattern>/productUp</url-pattern>
    </servlet-mapping>

<!--产品详情页的servlet-->
    <servlet>
        <servlet-name>ServletgetProduct</servlet-name>
        <servlet-class>WebServletp.ServletgetProduct</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletgetProduct</servlet-name>
