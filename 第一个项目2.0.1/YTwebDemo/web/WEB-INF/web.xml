        <servlet-class>WebServletTrade.ServletLikeProduct</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletLikeProduct</servlet-name>
        <url-pattern>/addCart</url-pattern>
    </servlet-mapping>

    <!--获取购物车-->
    <servlet>
        <servlet-name>ServletGetCarts</servlet-name>
        <servlet-class>WebServletTrade.ServletGetCarts</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletGetCarts</servlet-name>
        <url-pattern>/getCart</url-pattern>
    </servlet-mapping>

