    <servlet>
        <servlet-name>ServletgetUser</servlet-name>
        <servlet-class>WebServletUser.ServletgetUser</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletgetUser</servlet-name>
        <url-pattern>/user</url-pattern>
    </servlet-mapping>
