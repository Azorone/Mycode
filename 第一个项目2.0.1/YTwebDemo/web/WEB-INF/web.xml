        <servlet-class>WebServlet.ServletDelectLogin</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletDelectLogin</servlet-name>
        <url-pattern>/DelectLogin</url-pattern>
    </servlet-mapping>
